<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".UpdateOption_Survey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/datinginpark"
            />
        <ProgressBar
            android:id="@+id/pbloading"
            style="?android:attr/progressBarStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/survey_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Survey Question"
            android:textColor="#1B8350"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/questnname"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"
        android:hint="Your Survey Question"
        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/antic"
        android:layout_marginTop="10dp"
        android:textColor="#4E29A8"
        android:textStyle="bold"
        android:text="Select Option You Want To Update"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/optionsslist"
        android:layout_height="65dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"
        android:entries="@array/parklist_array"
        />
    <TextView
        android:id="@+id/sslogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/antic"
        android:layout_marginTop="10dp"
        android:textColor="#4E29A8"
        android:textStyle="bold"
        android:text="Enter New Option value"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/newvalue"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"
        android:hint="Enter New Value"
        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:layout_marginLeft="80dp"
        android:id="@+id/updatesoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Option"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@drawable/colorbutton"/>
    </LinearLayout>
</ScrollView>