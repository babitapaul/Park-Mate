<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
     <ImageView
        android:id="@+id/whatpostimage"
        android:scaleType="fitXY"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/posttimelineimage"
            android:layout_width="40dp"
            android:src="@drawable/userimage"
            android:layout_height="30dp"/>


    <TextView
        android:textColor="#4E29A8"
        android:textStyle="bold"
        android:fontFamily="@font/antic"
        android:text="Your Timeline Message"
        android:id="@+id/whatpost"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="#4E29A8"
              android:textStyle="bold"
              android:fontFamily="@font/antic"
              android:text="parkname"
              android:id="@+id/parkname"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:textColor="#4E29A8"
              android:textStyle="bold"
              android:fontFamily="@font/antic"
              android:text="Time"
              android:layout_marginLeft="20dp"
              android:id="@+id/timepost"
              android:textSize="8sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <ImageView
            android:id="@+id/reply"
              android:layout_width="50dp"
              android:src="@drawable/reply"
              android:layout_height="50dp">

          </ImageView>
          <ImageView
              android:id="@+id/deletetimline"
              android:layout_width="50dp"
              android:src="@drawable/deletecomment"
              android:layout_height="30dp">

          </ImageView>

      </LinearLayout>
</LinearLayout>