<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">





    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/decor"
        />

    <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Manage Survey"
        android:textColor="#1B8350"
        android:layout_marginLeft="10dp"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/antic"
        android:layout_marginTop="10dp"
        android:textColor="#4E29A8"
        android:textStyle="bold"
        android:text="Write Your Survey Question?"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/surveryquestion"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"

        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_marginTop="20dp"
            android:layout_marginRight="300dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:background="@drawable/colorbutton"/>
        <Button
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFY"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150sp"
            android:layout_marginRight="150dp"
            android:background="@drawable/colorbutton"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="300sp"
            android:background="@drawable/colorbutton"/>
    </RelativeLayout>

</LinearLayout>