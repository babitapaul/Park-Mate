<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddOption_Survey">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/datinginpark"
            />
        <ProgressBar
            android:id="@+id/pbloading"
            style="?android:attr/progressBarStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/survey_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Survey Question"
            android:textColor="#1B8350"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"
        android:hint="Add options"
        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/addOptions"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Options"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="60dp"
        android:background="@drawable/colorbutton"/>
    <TextView
        android:id="@+id/mylist"
        android:textStyle="bold"
        android:textColor="#4E29A8"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="Your Options List Display Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:id="@+id/addQuestion"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:visibility="invisible"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="60dp"
        android:background="@drawable/colorbutton"/>
</LinearLayout>