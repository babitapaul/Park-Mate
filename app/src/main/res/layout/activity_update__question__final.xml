<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Update_Question_Final">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/datinginpark"
            />
       

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Survey Question"
            android:textColor="#1B8350"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/addoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD Option"
            android:layout_marginTop="20dp"
            android:layout_marginRight="300dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:background="@drawable/colorbutton"/>
        <Button
            android:id="@+id/dropoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop Option"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150sp"
            android:layout_marginRight="150dp"
            android:background="@drawable/colorbutton"/>

        <Button
            android:id="@+id/updateoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update Option"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="300sp"
            android:background="@drawable/colorbutton"/>
    </RelativeLayout>

</LinearLayout>