<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/ourprogressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        >

    </androidx.core.widget.ContentLoadingProgressBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/datinginpark"
            />
        <ProgressBar
            android:id="@+id/pbloading"
            style="?android:attr/progressBarStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Park Name"
            android:textColor="#1B8350"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="40sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/parktype"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"
        android:hint="Park-Type"
        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/parkcity"
        android:layout_width="match_parent"
        android:layout_height="65dp"

        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:hint="which City park is located?"
        android:textColorHint="#4E29A8"
        android:textColor="#4E29A8"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/parkstate"
        android:layout_width="match_parent"
        android:layout_height="65dp"

        android:drawableLeft="@drawable/ic_assistant_photo_black_24dp"
        android:hint="which state park is located?"
        android:textColorHint="#4E29A8"
        android:textColor="#4E29A8"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/parkcounty"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:hint="which County park is located?"
        android:textColorHint="#4E29A8"
        android:textColor="#4E29A8"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/prkads"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Enter Park Address in Details....."
        android:drawableLeft="@drawable/ic_filter_vintage_black_24dp"

        android:textColorHint="#4E29A8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/selectparkimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="230dp"
            android:background="@drawable/colorbutton"/>
        <Button
            android:id="@+id/add"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Now"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="230sp"
            android:layout_marginRight="60dp"
            android:background="@drawable/colorbutton"/>


    </RelativeLayout>









</LinearLayout>