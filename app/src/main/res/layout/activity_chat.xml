<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Chat">
    <pl.droidsonroids.gif.GifImageView
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/livechat"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:id="@+id/chatlist"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp"
        android:stackFromBottom="true"

        android:dividerHeight="0dp"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>


    <Button android:id="@+id/sendchat"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Send"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <EditText android:id="@+id/writechatmsg"
        android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:hint="Type Here....   "
        android:textColor="#4E29A8"
        android:textColorHint="#4E29A8"
        android:layout_marginLeft="2dip" android:layout_marginRight="2dip"
        android:layout_toLeftOf="@id/sendchat"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>