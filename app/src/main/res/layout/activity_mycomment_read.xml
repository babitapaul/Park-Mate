<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MycommentRead">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mypic"
            android:layout_width="40dp"
            android:src="@drawable/userimage"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment Now"
            android:textColorHint="#4E29A8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/pbloading"
            style="?android:attr/progressBarStyle"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"/>
        <Button

            android:id="@+id/commentpost"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Comment Now"
            android:textColor="#fff"
            android:background="@drawable/colorbutton"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/viewtimelinerecylers"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>
